<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center"
        android:background="@drawable/icon_map"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:background="@drawable/logo"
        android:layout_gravity="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/buttonNuevoSitio"
                android:onClick="onClickDashboard"
                android:background="@drawable/boton_maps"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_site"
                android:padding="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="@color/abc_primary_text_material_dark"
                android:text="@string/title_activity_nuevo_sitio"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/buttonMisSitios"
                android:onClick="onClickDashboard"
                android:background="@drawable/boton_maps"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_place2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_mis_sitios"
                android:id="@+id/textView6"
                android:textColor="@color/abc_primary_text_material_dark"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
